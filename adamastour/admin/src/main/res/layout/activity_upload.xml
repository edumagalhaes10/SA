<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/myblue"
    tools:context=".UploadActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Upload Form"
        android:textSize="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textColor="@color/mygold">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/gold_border">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadName"
                android:background="@drawable/blue_border"
                android:layout_marginTop="20dp"
                android:hint="Point of Interest Name"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/myblue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadCity"
                android:background="@drawable/blue_border"
                android:layout_marginTop="20dp"
                android:hint="City Name"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/myblue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadLat"
                android:background="@drawable/blue_border"
                android:layout_marginTop="20dp"
                android:hint="Latitude"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/myblue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadLong"
                android:background="@drawable/blue_border"
                android:layout_marginTop="20dp"
                android:hint="Longitude"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/myblue"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/saveButton"
                android:text="Upload"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>